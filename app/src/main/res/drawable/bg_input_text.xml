<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <stroke android:width="1.5dp" android:color="@color/secondary" />
            <corners android:radius="@dimen/margin_component" />
        </shape>
    </item>

    <item android:state_focused="false">
        <shape>
            <stroke android:width="1.5dp" android:color="@color/primaryVariant" />
            <corners android:radius="@dimen/margin_component" />
        </shape>
    </item>
</selector>